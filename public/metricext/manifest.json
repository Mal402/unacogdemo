{
    "manifest_version": 3,
    "name": "Page-Metrics",
    "description": "Compute subjective metrics for web pages",
    "version": "0.0.1",
    "background": {
      "service_worker": "service-worker.js"
    },
    "externally_connectable": {
      "matches": ["<all_urls>"]
    },
    "icons": {
      "16": "logo16.png",
      "32": "logo32.png",
      "48": "logo48.png",
      "128": "logo128.png"
    },
    "side_panel": {
      "default_path": "index.html"
    },
    "action": {
      "default_icon": {
      "16": "logo16.png",
      "32": "logo32.png"
    },
      "default_title": "open side panel"
    },
    "permissions": ["storage", "activeTab", "scripting", "contextMenus", "unlimitedStorage", "sidePanel"]
  }