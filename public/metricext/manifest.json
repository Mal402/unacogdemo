{
    "manifest_version": 3,
    "name": "Page-Metrics",
    "description": "Compute subjective metrics for web pages",
    "version": "0.0.1",
    "background": {
      "service_worker": "service-worker.js"
    },
    "icons": {
      "16": "logo16.png",
      "32": "logo32.png",
      "48": "logo48.png",
      "128": "logo128.png"
    },
    "action": {
      "default_popup": "index.html",
      "default_title": "Page-Metrics",
      "default_icon": "logo128.png"
    },
    "permissions": ["storage", "activeTab", "scripting", "contextMenus", "unlimitedStorage"]
  }