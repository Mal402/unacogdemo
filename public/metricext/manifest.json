{
    "manifest_version": 3,
    "name": "Page-Metrics",
    "description": "Compute subjective metrics for web pages",
    "version": "0.5.0",
    "background": {
      "service_worker": "models/service-worker.js",
      "type": "module"
    },
    "externally_connectable": {
      "matches": ["<all_urls>"]
    },
    "icons": {
      "16": "media/logo16.png",
      "32": "media/logo32.png",
      "48": "media/logo48.png",
      "128": "media/logo128.png"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {
      "default_icon": {
      "16": "media/logo16.png",
      "32": "media/logo32.png"
    },
    "host_permission": [
      "<all_urls>"
    ],
      "default_title": "open side panel"
    },
    "permissions": ["storage", "activeTab", "scripting", "contextMenus", "unlimitedStorage", "sidePanel"]
  }